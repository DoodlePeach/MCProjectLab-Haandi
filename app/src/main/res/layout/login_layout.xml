<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/holo_blue_bright">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Haandi"
        android:textSize="70dp"
        android:layout_marginTop="70dp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:typeface="serif"/>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:id="@+id/search_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark">

            <TextView
                android:id="@+id/view_enter_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="19dp"
                android:text="Please enter your email"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edittext_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/view_enter_city"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="47dp"
                android:layout_marginTop="22dp"
                android:layout_marginRight="75dp"
                android:hint="example@email.com">

            </EditText>

            <TextView
                android:id="@+id/view_enter_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/edittext_email"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="51dp"
                android:text="Please enter your password"
                android:textStyle="bold"/>


            <EditText
                android:id="@+id/edittext_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/view_enter_password"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="49dp"
                android:layout_marginTop="23dp"
                android:layout_marginRight="120dp"
                android:hint="Password">


            </EditText>

            <Button
                android:id="@+id/button_login_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/edittext_login"
                android:layout_marginTop="50dp"
                android:text="LOGIN"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="580dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:id="@+id/social_login_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark">

            <TextView
                android:id="@+id/textview_social_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:text="Or login with:"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/button_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textview_social_login"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="17dp"
                android:text="Google" />

            <Button
                android:id="@+id/button_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/button_google"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="227dp"
                android:layout_marginTop="0dp"
                android:text="Facebook" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>



</RelativeLayout>