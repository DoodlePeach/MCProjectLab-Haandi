<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Haandi"
        android:textSize="70dp"
        android:layout_marginTop="70dp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:typeface="serif"/>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="250dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_light">

            <TextView
                android:id="@+id/view_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:text="If you don't have an account, Sign Up below!"
                android:textStyle="bold"
                android:visibility="visible" />

            <EditText
                android:id="@+id/edittext_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/view_sign_up"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="60dp"
                android:text="example@email.com" />


            <EditText
                android:id="@+id/edittext_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/edittext_email"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="63dp"
                android:layout_marginRight="60dp"
                android:text="Your Password" />

            <Button
                android:id="@+id/button_search_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/edittext_password"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                android:text="Sign UP" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>